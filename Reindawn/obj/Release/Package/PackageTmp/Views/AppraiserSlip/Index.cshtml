@model IEnumerable<Reindawn.Models.AppraisersSlipViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Appraiser Slip</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Appraiser Slip Records
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="AppraiserSlipTable">
                    <thead>
                        <tr>
                            <th class="col-lg-2">@Html.DisplayNameFor(model => model.ItemType)</th>
                            <th class="col-lg-2">@Html.DisplayNameFor(model => model.Amount)</th>
                            <th class="col-lg-4">@Html.DisplayNameFor(model => model.Details)</th>
                            <th class="col-lg-4">@Html.DisplayNameFor(model => model.Remarks)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ItemType)</td>
                                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                                <td>@Html.DisplayFor(modelItem => item.Details)</td>
                                <td>@Html.DisplayFor(modelItem => item.Remarks)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
                <div class="well">
                    <a class="btn btn-primary" href="@Url.Action("Create", "AppraiserSlip")">Create</a>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "AppraiserSlip")">Edit</a>
                    <a class="btn btn-primary" href="@Url.Action("Delete", "AppraiserSlip")">Delete</a>
                    <a class="btn btn-primary" href="@Url.Action("View", "AppraiserSlip")">View</a>
                    <a class="btn btn-primary" href="@Url.Action("View", "A")">View</a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts {
    <script>
        $(document).ready(function () {
            var table = $('#AppraiserSlipTable').DataTable({
                responsive: true
            });

            $('#AppraiserSlipTable tbody').on('click', 'tr', function () {
                console.log('table clicked');
                $(this).toggleClass('selected');
            });

            $('#btnDelete').click(function () {
                alert(table.rows('.selected').data().length + ' row(s) selected');
            });
        });
    </script>
}