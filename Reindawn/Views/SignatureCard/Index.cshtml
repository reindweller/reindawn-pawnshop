@model IEnumerable<Reindawn.Models.SignatureCardViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Signature Card</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Signature Card Records
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="SignatureCardsTable">
                    <thead>
                    <tr>
                        <th class="hidden">@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.PawnticketNo)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                        <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    </tr>
                    </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="hidden" >@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.PawnticketNo)</td>
                        <td class="center">@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    </tr>
                }
                </tbody>
                </table>
                <!-- /.table-responsive -->
                <div class="well">
                    <a class="btn btn-primary" href="@Url.Action("Create", "SignatureCard")">Create</a>
                    <a class="btn btn-primary" href="@Url.Action("Edit", "SignatureCard")">Edit</a>
                    <a class="btn btn-primary" href="@Url.Action("Delete", "SignatureCard")">Delete</a>
                    <a class="btn btn-primary" href="@Url.Action("View", "SignatureCard")">View</a>
                    <a class="btn btn-primary" href="#" id="btnCreateAppraiserSlip">Create Appraiser Slip</a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

@section scripts {
    <script>
        $(document).ready(function () {
            var table = $('#SignatureCardsTable').DataTable({
                responsive: true
            });
            
            $('#SignatureCardsTable tbody').on('click', 'tr', function () {
                $(this).toggleClass('selected');
            });

            $('#btnDelete').click(function () {
                alert(table.rows('.selected').data().length + ' row(s) selected');
            });

            $("#btnCreateAppraiserSlip").click(function () {
                var selected = table.rows('.selected').data();
                if (selected.length === 1) {
                    var id = selected[0][0];

                    var url = '@Url.Action("Create", "AppraiserSlip", new { id = "__id__" })';
                    window.location.href = url.replace('__id__', id);
                    
                    return;
                }

                alert('please select one(1) record');
            });
        });


    </script>
}